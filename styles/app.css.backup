}

.todo-text {
  flex: 1;
  font-size: 15px;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  cursor: pointer;
  position: relative;
  transition: color 0.3s ease;
  margin-top: 10px;
}

.ripple {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
  transform: scale(0);
  animation: ripple-animation 0.6s ease-out;
  pointer-events: none;
}

@keyframes ripple-animation {
  to {
    transform: scale(4);
    opacity: 0;
  }
}

.progress-fill {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 0;
  background: linear-gradient(
    90deg,
    rgba(46, 204, 113, 0.2),
    rgba(46, 204, 113, 0.4)
  );
  border-radius: 16px;
  z-index: -1;
  transition: width 0.5s ease-in-out;
}

.todo-item.done {
  background: linear-gradient(
    135deg,
    rgba(46, 204, 113, 0.15),
    rgba(39, 174, 96, 0.25)
  );
  border-color: rgba(46, 204, 113, 0.5);
  box-shadow: 0 4px 15px rgba(46, 204, 113, 0.2);
}

.todo-item.done .todo-content {
  opacity: 0.7;
  filter: blur(2px);
}

.todo-item.done .todo-text {
  color: rgba(255, 255, 255, 0.7);
}

.todo-item.done .todo-text::after {
  content: "âœ“";
  position: absolute;
  left: 15px;
  top: 50%;
  transform: translateY(-50%) scale(1.2);
  color: #2ecc71;
  font-size: 24px;
  font-weight: bold;
  opacity: 1;
  filter: drop-shadow(0 0 3px rgba(46, 204, 113, 0.8));
  animation: checkmark-appear 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes checkmark-appear {
  0% {
    transform: translateY(-50%) scale(0) rotate(-45deg);
    opacity: 0;
  }
  50% {
    transform: translateY(-50%) scale(1.3) rotate(10deg);
  }
  100% {
    transform: translateY(-50%) scale(1.2) rotate(0deg);
    opacity: 1;
  }
}

@keyframes task-complete {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.95);
  }
  100% {
    transform: scale(0.98);
  }
}

.todo-item.completing {
  animation: task-complete 0.5s ease-in-out;
}

@keyframes shake {
  0%,
  100% {
    transform: translateX(0);
  }
  10%,
  30%,
  50%,
  70%,
  90% {
    transform: translateX(-3px);
  }
  20%,
  40%,
  60%,
  80% {
    transform: translateX(3px);
  }
}

